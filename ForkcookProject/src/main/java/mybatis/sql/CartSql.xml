<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cart">
	<select id="cartTotalCount" resultType="int">
		select count(*) from cart
	</select>
	<select id="cartList" resultType="cdto">
		select c.num, c.unum, c.snum, m.name as menuname,c.mcount, c.mtotalprice
		from menu m, cart c
		where c.mnum = m.num
	</select>
	<!-- 장바구니에서 + - 클릭하면 수량 변함 mtotalprice=2  -->
	<update id="countUpdate" parameterType="int">
		update cart set mcount=mcount+1, mtotalprice+1 where num=#{num}
	</update>
	<select id="countSelect" parameterType="int" resultType="int">
		select mcount from cart where num=#{num}
	</select>
	<!-- 메뉴에서 카트로 음식 넣기 -->
	<insert id="cartInsert" parameterType="cdto">
		insert into cart(num,unum,mnum,mcount,mtotalprice) values (seq_cart.nextval,#{unum},#{mnum},1,#{mtotalprice})
	</insert>
	<delete id="cartDelete" parameterType="int">
		delete from cart where num=#{num}
	</delete>
</mapper>
