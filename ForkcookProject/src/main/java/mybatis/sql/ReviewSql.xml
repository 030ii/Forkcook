<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">
	<select id="reviewTotalCount" resultType="int">
		select count(*) from review
	</select>
	<select id="reviewList" resultType="rdto">
	   	select * from review
	</select>
	<delete id="reviewDelete" parameterType="int">
		delete from review where num=#{num}
	</delete>
	<insert id="reviewInsert" parameterType="rdto">
		insert into review (num,content,rate,writeday) values (seq_review.nextval,#{content},#{rate},sysdate)
	</insert>
</mapper>